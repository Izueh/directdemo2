[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/directdemo2
ExecStart=/usr/local/bin/gunicorn \
          -b 0.0.0.0:8000 \
          --access-logfile /home/ubuntu/directdemo2/log/gunicorn-access \
          --error-logfile /home/ubuntu/directdemo2/log/gunicorn-error \
          app:app
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
